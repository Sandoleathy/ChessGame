<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChineseChessFront">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/screen_background"
        android:src="@drawable/screen_background"
        android:scaleType="centerCrop"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="25sp"
        android:id="@+id/counter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/information_bar"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="480sp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/board_background"
        android:id="@+id/board_background"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/red_side_info"
        android:textColor="@color/red"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="30sp"
        android:id="@+id/information_bar"
        android:background="@drawable/infromation_bar_style"/>
    <ImageView
        android:layout_width="50sp"
        android:layout_height="50sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/chinese_chess_board"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/river_name_red"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/river_2"
        android:id="@+id/river_1"
        android:textSize="25sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/river_name_black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/river_1"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/river_2"
        android:textSize="25sp"/>
    <GridView
        app:layout_constraintTop_toTopOf="@id/board_background"
        app:layout_constraintBottom_toBottomOf="@id/board_background"
        app:layout_constraintLeft_toLeftOf="@id/board_background"
        app:layout_constraintRight_toRightOf="@id/board_background"
        android:layout_width="405sp"
        android:layout_height="450sp"
        android:id="@+id/chinese_chess_board"
        android:numColumns="9"
        android:stretchMode="columnWidth" />


</androidx.constraintlayout.widget.ConstraintLayout>